generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       Int @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  projects Project[]
}

model Project {
  id             Int @id @default(autoincrement())
  name           String @unique
  description    String?
  user           User @relation(fields: [userId], references: [id])
  userId         Int
}
